FROM node:18-alpine

WORKDIR /app

# Copy .env if available (for local builds)
COPY .env* ./

# Copy package files
COPY client/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY client/ .



# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]